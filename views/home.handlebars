        <div class="grid rounded-lg p-2 col-span-2 row-span-1 text-white bg-purple-600">
            <h3 class="mx-auto text-4xl p-1">Inputs:</h3>
            <form class="grid grid-cols-2 grid-rows-2 gap-2">
                <label class="block col-span-1 row-span-1">
                    Caller ID:
                    <input class="block border-2 border-purple-800 rounded bg-purple-300 p-1 w-full" list="wallets" id="caller">
                            <datalist id="wallets">
                                {{#each wallets}}
                                <option value="{{id}}">
                                {{/each}}
                            </datalist>
                    </imput>
                    </label>
                <label class="block col-span-1 row-span-1">
                    Contract TXID:
                    <input class="block border-2 border-purple-800 rounded bg-purple-300 p-1 w-full" list="txid" id="conid">
                            <datalist id="txid">
                                {{#each tx as |id|}}
                                <option value="{{id.[1]}}">{{id.[0]}}</option>
                                {{/each}}
                            </datalist>
                    </imput>
                    </label>
                <label class="block col-span-2 row-span-1">
                    Action.input:
                    <input class="block border-2 border-purple-800 rounded bg-purple-300 p-1 w-full" id="json"></imput>
                </label>
                <input type="submit" class="hidden" id="form"/>
            </form>
        </div>
        <div class="grid rounded-lg px-2 pb-2 col-span-2 row-span-3 bg-purple-600">{{!-- logs --}}
            <h3 class="mx-auto text-4xl text-white p-1">Logs:</h3>
            <ul class="overflow-auto rounded-lg h-72" id="logs">                                
                {{#each log as |_log|}}
                <li class="border-b-2 border-purple-800 rounded-b bg-purple-300 p-1">{{{_log}}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>